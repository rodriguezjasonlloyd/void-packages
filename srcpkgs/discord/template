# Template file for 'discord'
pkgname=discord
version=0.0.119
revision=1
archs="x86_64"
depends="alsa-lib dbus-glib gtk+3 libnotify nss libXtst libcxx libatomic
 xdg-utils webrtc-audio-processing libXScrnSaver"
short_desc="Chat and VOIP application"
maintainer="Ryan Conwell <ryanconwell@protonmail.com>"
license="custom:Proprietary"
homepage="https://discord.com"
distfiles="https://dl.discordapp.net/apps/linux/${version}/discord-${version}.tar.gz"
checksum=fcd7e01c15ec5166280c4546cf5dc6054d484a949d0793a6ae3852376e5204c8
nopie=yes
restricted=yes
repository=nonfree
nostrip=yes
noshlibprovides=yes

do_install() {
	local package_location="usr/lib/$pkgname" item
	vmkdir usr/share/pixmaps
	vinstall discord.png 644 /usr/share/pixmaps/
	vmkdir usr/share/applications
	vcopy discord.desktop /usr/share/applications/
	vmkdir ${package_location}
	for item in \
		Discord \
		chrome-sandbox \
		chrome_100_percent.pak \
		chrome_200_percent.pak \
		chrome_crashpad_handler \
		discord.png \
		icudtl.dat \
		libEGL.so \
		libGLESv2.so \
		libffmpeg.so \
		libvk_swiftshader.so \
		libvulkan.so.1 \
		locales \
		postinst.sh \
		resources \
		resources.pak \
		snapshot_blob.bin \
		v8_context_snapshot.bin \
		vk_swiftshader_icd.json
	do
		vcopy "${item}" "${package_location}"
	done
	vmkdir usr/bin
	ln -sfr $DESTDIR/${package_location}/Discord $DESTDIR/usr/bin/discord
}

post_install() {
	vlicense $FILESDIR/LICENSE
}
