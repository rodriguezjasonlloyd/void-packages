# Template file for 'nerd-fonts-meslo'
pkgname=nerd-fonts-meslo
version=3.4.0
revision=1
short_desc="Iconic font aggregator collection - Meslo"
maintainer="jason <rodriguezjasonlloyd@gmail.com>"
license="OFL-1.1"
homepage="https://nerdfonts.com/"
distfiles="https://github.com/ryanoasis/nerd-fonts/releases/download/v${version}/Meslo.tar.xz"
checksum=a57936d96aefb5cfff0660f3294210ee04705529af6cf811e2274b0923a03939

do_install() {
	vmkdir usr/share/fonts/NerdFonts/ttf/Meslo

	for font in *.ttf; do
		[ -f "$font" ] && vinstall "$font" 644 usr/share/fonts/NerdFonts/ttf/Meslo
	done
}

post_install() {
	vlicense LICENSE.txt
}

