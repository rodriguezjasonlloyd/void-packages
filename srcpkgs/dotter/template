# Template file for 'dotter'
pkgname=dotter
version=0.13.4
revision=1
build_style=cargo
short_desc="Dotfile manager and templater written in rust"
maintainer="jason <rodriguezjasonlloyd@gmail.com>"
license="Unlicense"
homepage="https://github.com/SuperCuber/dotter"
distfiles="https://github.com/SuperCuber/dotter/archive/refs/tags/v${version}.tar.gz"
checksum=46135bcae1940cb22284308bd2cf75d78bb06a748136d835f29db978521fd45a

post_install() {
	for shell in bash fish zsh; do
		${DESTDIR}/usr/bin/dotter gen-completions --shell ${shell} > dotter.${shell}
		vcompletion dotter.${shell} ${shell}
	done

	vlicense LICENSE.md
}
